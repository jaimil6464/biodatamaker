<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"


    tools:context=".MainActivity">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/biodata"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="8dp"

        android:src="@drawable/boy"
        android:scaleType="fitXY"/>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:id="@+id/biodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIODATA"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/personaldetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Detail:-"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:layout_below="@+id/biodata"

        android:textColor="@color/black"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name   :- "
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/personaldetail"

        android:textColor="@color/black"
        android:textStyle="italic"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Your Name"
    android:textSize="20dp"
    android:background="#F39FBC"
    android:layout_below="@+id/biodata"
    android:paddingLeft="5dp"
    android:layout_toRightOf="@id/personaldetail"
    android:layout_marginTop="52dp"/>

<TextView
    android:id="@+id/birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth  :- "
        android:layout_marginTop="38dp"
        android:textSize="20dp"
        android:layout_below="@+id/personaldetail"

        android:textColor="@color/black"
        android:textStyle="italic"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Birth Date"
    android:textSize="20dp"
    android:background="#F39FBC"
    android:layout_below="@+id/fullname"
    android:inputType="date"
    android:paddingLeft="5dp"
    android:layout_toRightOf="@id/personaldetail"
    android:layout_marginTop="5dp"/>
    <TextView
    android:id="@+id/birthtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Birth Time :- "
        android:layout_marginTop="75dp"
        android:textSize="20dp"
        android:layout_below="@+id/personaldetail"

        android:textColor="@color/black"
        android:textStyle="italic"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Birth time"
    android:textSize="20dp"
    android:background="#F39FBC"
    android:layout_below="@+id/fullname"
    android:inputType="time"
    android:paddingLeft="5dp"
    android:layout_toRightOf="@id/birthdate"
    android:layout_marginTop="40dp"/>





    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender  :- "
        android:layout_marginTop="114dp"
        android:textSize="20dp"
        android:layout_below="@+id/personaldetail"
        android:layout_marginLeft="5dp"

        android:textColor="@color/black"
        android:textStyle="italic"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/birthtime"
        android:layout_marginLeft="120dp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/birthtime"
        android:layout_marginLeft="210dp"/>


    <TextView
        android:id="@+id/placeofbirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place of Birth  :- "
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/gender"
        android:textColor="@color/black"
        android:textStyle="italic"/>
    <EditText
        android:id="@+id/hintbirthplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birth Place"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/gender"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/personaldetail"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight  :- "
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/placeofbirth"

        android:textColor="@color/black"
        android:textStyle="italic"/>
    <EditText
        android:id="@+id/hintweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Weight"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/birthtime"
        android:inputType="date"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/weight"

        android:layout_marginTop="85dp"/>
    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height  :- "
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/weight"
        android:layout_toLeftOf="@id/hintweight"


        android:textColor="@color/black"
        android:textStyle="italic"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Height"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/weight"
        android:inputType="date"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/height"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education  :- "
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/height"

        android:textColor="@color/black"
        android:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Education"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/height"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/education"
        android:layout_marginTop="10dp"/>
    <TextView
    android:id="@+id/occupation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Occupation :- "
    android:layout_marginTop="10dp"
    android:textSize="20dp"
    android:layout_below="@+id/education"

    android:textColor="@color/black"
    android:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Occupation"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/education"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/education"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/familydetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAMILY DETAIL:-"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/occupation"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/father"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father Name :- "
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:layout_below="@+id/education"

        android:textColor="@color/black"
        android:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Father Name"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/education"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/father"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="5dp"/>
    <TextView
        android:id="@+id/mother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mother Name :- "
        android:layout_marginTop="120dp"
        android:textSize="20dp"
        android:layout_below="@+id/education"


        android:textColor="@color/black"
        android:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mother Name"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/education"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/mother"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="5dp"/>
    <TextView
        android:id="@+id/brother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brother Name :- "
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/mother"

        android:textColor="@color/black"
        android:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Brother Name"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/mother"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/mother"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"/>
    <TextView
        android:id="@+id/Sister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sister Name :- "
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/brother"

        android:textColor="@color/black"
        android:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sister Name"
        android:textSize="20dp"
        android:background="#F39FBC"
        android:layout_below="@+id/brother"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/brother"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"/>


















</RelativeLayout>